---
title: Вход
inputs: 
- text: Логин
  name: login
  type: text

- text: Пароль
  name: password
  type: password

buttons: 
- variant: bg-amber-700 text-stone-50 hover:bg-amber-600 hover:text-stone-100
  text: Войти
  href: ./chats.hbs

- variant: bg-inherit text-amber-700 hover:bg-stone-100 hover:text-amber-600
  text: Зарегистрироваться
  href: ./signup.hbs
---

{{!< main}}
<div class="auth_container">
    <div class="auth_title-container">
        <h1 class="auth_title">{{title}}</h1>
    </div>
    <div class="auth_inputs-container">
        {{# each inputs}}
            {{> "auth_input/auth_input"}}
        {{/each}}
    </div>
    <div class="auth_buttons-container">
        {{# each buttons}}
            {{> "button/button"}}
        {{/each}}
    </div>
</div>